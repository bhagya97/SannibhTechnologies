<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.sannibhtechnologies.About">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="About Us"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="35sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="As India gears up to become a global economic powerhouse with an assest of 62% of the population in the working age group and more than 54% of the total population below 25 years of age, it becomes imperative to focus on their capacity building for improved productivity and economic growth."
            android:id="@+id/textView2"
            android:layout_marginTop="37dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="The objective of Sannibh Technologies is to enable a large number of youth to take up industry-relevant skill training that will help them in securing a better livelihood."
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The inception of Sannibh which literally means rays of light is grounded with the belief to act as a &apos;light house&apos; for the present day youth with an aim to empower individuals and improve their social acceptance. "
            android:id="@+id/textView9"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our sole aim is to nurture the youth impressively and to prepare practitioners who are globally competitive as well as committed towards their profession and who can thrive well in this volatile economy."
            android:id="@+id/textView10"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_below="@+id/textView9"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp" />
        <ImageButton
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_down"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/textView10"

            android:visibility="visible" />
        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n\nOur credo is to help individuals:
\nSail Across with Nurturing and Networking to Invincible Big Heights
\n\nTo achieve this and set up benchmarking standards in the academic as well as corporate world, our services to the learners include Technical Training in the area of Mobile Technology, Web Technology, Information Security, Big Data, etc. as per global standards, Mentoring and also nurturing and grooming them through our Finishing School.\nOur deliverables also include Software Development and solutions in the area of Web Development, Mobile Application Development, Software Testing and Quality Assurance, Ethical Hacking and Information Security, etc.\nBesides this we are strong advocates of Continuing Personal and Professional Development for which we offer well defined and designed as well as customized training packages for academic as well as corporate sector across various spectrums."
            android:textSize="20sp"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_below="@+id/show"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageButton
            android:id="@+id/hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_up"
            android:clickable="true"
            android:visibility="visible"
            android:layout_below="@+id/description_text"
            android:layout_centerHorizontal="true" />








    </RelativeLayout>
</ScrollView>
